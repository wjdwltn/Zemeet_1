<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../adminFrame/head.ejs') %>
</head>

<body>
    <div id="wrapper">
        <%-include('../adminFrame/nav.ejs') %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">회원정보 상세보기</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            회원정보 세부사항
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <form id="memberForm" role="form">
                                <div class="row" style="margin-bottom:15px">
                                    <div class="col-lg-3">
                                        <input type="hidden" name="idx" value="<%=rows.idx%>">
                                        <div class="form-group">
                                            <label>회원번호</label>
                                            <div><%= rows.idx %></div>
                                        </div>
                                        <div class="form-group">
                                            <label>아이디</label>
                                            <div><%= rows.id %></div>
                                        </div>
                                        <div class="form-group">
                                            <label>이름</label>
                                            <div><%= rows.name %></div>
                                        </div>
                                        <div class="form-group">
                                            <label>닉네임</label>
                                            <div><%= rows.nick %></div>
                                        </div>
                                        <div class="form-group">
                                            <label>등급</label>
                                            <div><%= rows.ranking %></div>
                                        </div>
                                        <div class="form-group">
                                            <label>알림설정</label>
                                            <div><%= rows.push %></div>
                                        </div>
                                    </div>        
                                    <!-- /.col-lg-5 (nested) -->
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>비밀번호</label>
                                            <div><%= rows.pw %></div>
                                        </div>
                                        <div class="form-group">
                                            <label>생년월일</label>
                                            <div><script>document.write(dateFormat('<%=rows.birth%>'))</script></div>
                                        </div>
                                        <div class="form-group">
                                            <label>가입일</label>
                                            <div><script>document.write(dateFormat('<%=rows.rdate%>'))</script></div>
                                        </div>
                                        <div class="form-group">
                                            <label>전화번호</label>
                                            <div><%= rows.number.replace(/^(\d{2,3})(\d{3,4})(\d{4})$/, `$1-$2-$3`) %></div>
                                        </div>
                                        <div class="form-group">
                                            <label>포인트</label>
                                            <div><%= rows.point %> P</div>
                                        </div>
                                        <!-- <div class="form-group">
                                            <label>누적사용액</label>
                                            <div>￦ </div>
                                        </div> -->
                                    </div>
                                </div>
                                <div class="text-left">
                                    <td colspan="2">
                                        <td><button type="button" class="btn btn-primary" style="padding:4px 12px;" onclick="location.href='/admin/member';">목록</a></button></td> 
                                        <td><button type="button" class="btn btn-warning" style="padding:4px 12px;" onclick="location.href='/admin/member_update?idx=<%= rows.idx %>';">수정</button></td>
                                        <td><button type="button" class="btn btn-danger" style="padding:4px 12px;" onclick= "deletePop()">삭제</button></td>
                                    </td>
                                </div>
                            </form> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<%-include('../adminFrame/footer.ejs')%>
<script>
function deletePop() {
    if(confirm('정말 삭제하시겠습니까?')){
        location.href='/admin/deleteMember?idx=<%= rows.idx %>'
    } else {
        return false;
    }
}
</script>