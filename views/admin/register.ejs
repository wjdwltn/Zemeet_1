<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../adminFrame/head.ejs') %>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="text-align:center";>회원가입</h3>
                    </div>
                    <div class="panel-body">
                        <div class="w-form">
                            <form id="registrationForm" name="email-form" data-name="Email Form" method="post">
                              <div> 아이디</div><input id="inputAN_Id"  type="varchar" class="form-control" maxlength="8" name="id" placeholder="아이디를 입력하세요">
                              <div>비밀번호</div><input  type="password" class="form-control" maxlength="12" name="pw" placeholder="비밀번호를 입력하세요">
                              <div>비밀번호 확인</div><input type="password" class="form-control" maxlength="12" name="pwcheck" placeholder="비밀번호를 다시 입력하세요">
                              <div>이름</div><input id="inputName" type="varchar" class="form-control" maxlength="8" name="name" placeholder="이름을 입력하세요">
                              <div>연락처</div><input id ="inputPhone" type="varchar" class="form-control" maxlength="13" name="number"  placeholder = "ex) 010-1234-5678">
                              <div>생년월일</div><input type="date" class="form-control" name="birth" placeholder="ex) 19991231">
                              <button type="button" class="btn btn-lg btn-success btn-block" onclick="register()">가입하기</button>
                            </form>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=6073d35203881b197a7cdb93" type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<%-include('../adminFrame/footer.ejs') %>
<style>
    .form-control{
        margin-bottom:15px;
    }
</style>
<script>
function register(){
    let formData = $("#registrationForm").serialize(); // formData 
    $.ajax({
            type : 'post' , // post / get (noticeWrite.do) (네트워크 주소 설정)
            url : '/admin/registrationProcess' , 
            data : formData , 
            dataType : 'json' ,                 
    }).done(function(data){                
          if(data.result == 'success'){
            console.log("성공")
            alert(data.msg)
          }else{
           alert(data.msg)
          }              
    }).fail(function(e){
            console.log(JSON.stringify(e));
    })
}
</script>