<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../adminFrame/head.ejs') %>
</head>

<body>
    <div id="wrapper">
        <%-include('../adminFrame/nav.ejs') %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">이용약관 상세정보</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            이용약관 세부사항
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <form id="reservationForm" role="form">
                                <div class="row" style="margin-bottom:15px">
                                    <div class="col-lg-6">
                                        <input type="hidden" name="idx" value="<%=info.idx%>">
                                        
                                        <div class="form-group">
                                            <label>제목</label>
                                            <div style="word-break:break-all;word-wrap:break-word;"><%= info.title %></div>
                                        </div>
                                        <div class="form-group">
                                            <label>내용</label>
                                            <div id="content" style="word-wrap:break-word;">
                                                <%- info.content.replace(/(?:\r\n|\r|\n)/g, '<br/>') %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <tr>
                                    <td colspan="2">
                                        <td><button type="button" class="btn btn-primary" style="padding:4px 12px;" onclick="location.href='/admin/terms';">목록</button></td> 
                                        <td><button type="button" class="btn btn-warning" style="padding:4px 12px;" onclick="location.href='/admin/terms_update';">수정</button></td>
                                        <td><button type="button" class="btn btn-danger" style="padding:4px 12px;" onclick= "fileDelete()">삭제</button></td>
                                        
                                    </td>
                                </tr>
                            </form> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<%-include('../adminFrame/footer.ejs')%>
<script>
 function fileDelete(idx){
        if(confirm("삭제하시겠습니까?")){
            $.ajax({
                type : 'get' , 
                url : '/admin/deleteTemrs' , 
            }).done(function(data){                
                alert(data.msg);
                if(data.result == 'success'){
                    location.href='/admin/terms'
                }            
            }).fail(function(e){
                    console.log(JSON.stringify(e));
            })            
        }
}
</script>