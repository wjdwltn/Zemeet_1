<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../adminFrame/head.ejs')%>
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <%-include('../adminFrame/nav.ejs')%>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">자주묻는질문 수정하기</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            질문 수정
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <form id="queForm"  enctype="multipart/form-data"  method="post" >
                                <div class="row" style="margin-bottom:15px">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>질문</label>
                                            <input input value="<%= rows.que %>" name="que" maxlength="100"  required class="form-control" style="min-width:100%;" >
                                        </div>
                                        <div class="form-group">
                                            <label>답변</label>
                                            <textarea name="ans" rows="15" style="min-width:100%; word-wrap: break-word;" maxlength="" required class="form-control"><%= rows.ans %></textarea>
                                        </div>
                                        <div>
                                            <button type="button" class="btn btn-warning" style="padding:4px 12px;" onclick="queupdate('<%=rows.idx%>')">수정</button>
                                            <button type="button" class="btn btn-primary" style="padding:4px 12px;" onclick="location.href='/admin/game_qdetail?idx=<%=rows.idx%>';">목록</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</body>
</html>
<%-include('../adminFrame/footer.ejs')%>
<script>
function queupdate(idx){
    let data = $("#queForm").serialize();
    console.log("data,",data)
    $.ajax({
            type : 'get' , 
            url : '/admin/updateGame1?idx='+idx , 
            data : data , 
            dataType : 'json' , 
    }).done(function(data){                
        alert(data.msg);
        if(data.result == 'success'){
            location.href = '/admin/game_qdetail?idx=<%=rows.idx%>'
        }            
    }).fail(function(e){
            console.log(JSON.stringify(e));
    })
    
}

</script>
