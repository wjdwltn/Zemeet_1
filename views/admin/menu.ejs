<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../adminFrame/head.ejs')%>
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <%-include('../adminFrame/nav.ejs')%>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">메뉴 관리</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           메뉴 목록
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-lg-12">
                                    <form method="get" action="/admin/menu" id="searchForm" class="form-3" style="float:right; display:flex;">
                                        <input type="hidden" name="page" id="pageIndex" value="0">
                                        <select name="Catetype" class="form-control input-sm" style="margin-right:10px; width:30%;">                                            
                                            <option value="ALLC"  <% if(searchCateType == 'ALLC'){ %> selected  <% } %>>카테고리전체</option>
                                            <option value="Food" <% if(searchCateType == 'Food'){ %> selected  <% } %>>Food</option>
                                            <option value="Cafe" <% if(searchCateType == 'Cafe'){ %> selected  <% } %>>Cafe</option>
                                            <option value="Pub" <% if(searchCateType == 'Pub'){ %> selected  <% } %>>Pub</option>
                                        </select>
                                        <select name="Selltype" class="form-control input-sm" style="margin-right:10px; width:30%;">                                            
                                            <option value="ALLS" <% if(searchSellType == 'ALLS'){ %> selected  <% } %>>품절상태전체</option>
                                            <option value="0" <% if(searchSellType == '0'){ %> selected  <% } %>>품절</option>
                                            <option value="1" <% if(searchSellType == '1'){ %> selected  <% } %>>판매중</option>
                                        </select>
                                        <input type="text" class="form-control input-sm" placeholder="메뉴명입력" name="searchWord" style="margin-right:10px; ; width:30%;" value="<%=search%>">
                                        <button class="btn btn-default" style="padding:4px 12px;">검색</button>
                                    </form>
                                </div>
                            </div>
                        
                            <table width="100%" class="table table-striped table-bordered table-hover" style="table-layout:fixed;">
                                <thead style="background:rgb(243, 243, 243)">
                                    <tr>
                                        <th width="115px">메인사진</th>
                                        <th>메뉴명</th>
                                        <th>카테고리</th>
                                        <th>가격</th>
                                        <th>품절 상태</th>
                                        <th>등록일</th>
                                        <th style="width:150px;">상세정보</th>
                                    </tr>
                                </thead>
                                <thead>
                                    <% for(var i = 0; i < list.length ; i++) { %>
                                    <tr style="word-break:break-all">
                                        <!--이미지 경로를 못찾으면 server.js에서 경로 설정해주어야함 !-->
                                        <td width="100px;" height="100px"><img src="/<%= list[i].pic %>" width="100px;" height="100px";/></td>
                                        <td><%= list[i].name %></td>
                                        <td><%= list[i].category %></td>
                                        <td><%- list[i].price.toLocaleString() %></td>
                                        <% if( list[i].sell == 0) { %>
                                            <td>품절</td>
                                        <%} else if( list[i].sell == 1) {%>
                                            <td>판매중</td>
                                        <%}%>
                                        <td><%= new Date(list[i].udate).toLocaleString().slice(0,10) %></td>
                                        <td><button type="button" class="btn btn-primary" style="padding:4px 12px;" onclick="location.href='/admin/menu_detail?idx=<%= list[i].idx%>';">상세정보</button></td>
                                    </tr>
                                    <%}%>
                                </thead>
                            </table>
                            <div class="text-center">
                                <div class="panel-body">
                                    <!-- Nav tabs -->
                                    <ul class="pagination">
                                        <% if(page == 0) { %>
                                            <li class="paginate_button"><a href="javascript:void(0)">&laquo;</a></li>
                                        <% }else { %>
                                            <li class="paginate_button"><a href="javascript:paging(<%=page-1%>)">&laquo;</a></li>
                                        <% } %>
                                        <% if(Math.ceil(totalitems/countperpage) == 0) { %>
                                            <li class="paginate_button active"><a href="javascript:paging(<%=0%>)" class="page">1</a></li>
                                        <% }else { %>
                                        <%  for(var j = 0; j < Math.ceil(totalitems/countperpage) ; j++){  %>                                            
                                            <li class="paginate_button <% if (page == j) { %> active<%}%>"><a href="javascript:paging(<%=j%>)" class="page"><%= j + 1 %></a></li>
                                        <%}%>         
                                        <%}%>                                            
                                        <% if(page+1 == Math.ceil(totalitems/countperpage)) { %>
                                            <li class="paginate_button"><a href="javascript:void(0)">&raquo;</a></li>
                                        <% }else { %>
                                            <li class="paginate_button"><a href="javascript:paging(<%=page+1%>)">&raquo;</a></li>
                                        <% } %>                                        
                                    </ul>
                                </div>
                            </div>
                            <div>   
                                <button type="button" class="btn btn-warning" onclick="location.href='/admin/menu_write'">등록하기</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 <script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=61fb361452ff0215fe4db1db" type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="webflow.js" type="text/javascript"></script>
</body>
</html>
<%-include('../adminFrame/footer.ejs')%>
<script>
    function fileDelete(idx){
        if(confirm("삭제하시겠습니까?")){
            $.ajax({
                type : 'get' , 
                url : '/menuFileDeleteProcess?idx='+idx , 
            }).done(function(data){                
                alert(data.msg);
                if(data.result == 'success'){
                    location.reload();
                }            
            }).fail(function(e){
                    console.log(JSON.stringify(e));
            })            
        }
    }
    function paging(num){      
      $("#pageIndex").val(num);      
      $("#searchForm").submit();
  }
</script>