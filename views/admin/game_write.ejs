                                            <label class="radio-inline">
                                                <input type="radio" name="explantime" value="30분" />30분
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            <label>난이도<span class='identify'> *</span></label>
                                            <label class="radio-inline">
                                                <input type="radio" name="level" value="easy" />EASY
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="level" value="normal" />NORMAL
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="level" value="hard" />HARD
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="level" value="very hard" />VERY HARD
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            <label>진열 위치<span class='identify'> *</span></label>
                                            <input input type="varhcar" name="loc" maxlength="100" required class="form-control" style="width:600px; height:30px;" >
                                        </div>
                                        <div class="form-group">
                                            <label>한 줄 설명<span class='identify'> *</span></label>
                                            <input input type="varhcar" name="simexplan" maxlength="100" required class="form-control" style="width:600px; height:30px;" >
                                            
                                        </div>
                                        <div class="form-group">
                                            <label>게임 영상</label>
                                            <input type="file" name="vid"  accept="video/*" onchange='chk_videofile_type(this)' >
                                            
                                        </div>
                                        <div class="form-group">
                                            <label>게임 설명</label>
                                            <textarea type="varhcar" name="explan"  rows="10" cols="60" maxlength="1000000" required class="form-control" wrap="hard" ></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right">  
                                    <td colspan="2">
                                        <td><button type="button" class="btn btn-warning" style="padding:4px 12px;" onclick="fileUpload()">등록</a></button></td>
                                        <td><button type="button" class="btn btn-primary" style="padding:4px 12px;"  onclick="location.href='/admin/game';">목록</button></td>                                                
                                    </td>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>    
            </div>
        </div>
    </div>
    <style>
        .identify{font-size: 14px; color:red;}
    </style>
</body>
</html>
<%-include('../adminFrame/footer.ejs')%>
<script>

    function fileUpload(){
        let form = $("#gameFileForm")[0]; 
        let data = new FormData(form);    
        console.log("data,",data)
        $.ajax({
                type : 'post' , 
                url : '/admin/gameFileProcess' , 
                data : data , 
                dataType : 'json' ,   
                // processData / contentType 설명 https://repacat.tistory.com/38 참고               
                processData:false, 
                contentType:false,
        }).done(function(data){                
            alert(data.msg);
            if(data.result == 'success'){
                location.href = '/admin/game'
            }            
        }).fail(function(e){
                console.log(JSON.stringify(e));
        })
    }
    function chk_file_type(obj) {
        var file_kind = obj.value.lastIndexOf('.');
        var file_name = obj.value.substring(file_kind+1,obj.length);
        var file_type = file_name.toLowerCase();
        var check_file_type=new Array();

        check_file_type=['jpg','gif','png','jpeg','bmp'];



        if(check_file_type.indexOf(file_type)==-1){
            alert('이미지 파일만 선택할 수 있습니다.');
            obj.value = '';
            return false;
        }
    }
    function chk_videofile_type(obj) {
        var file_kind = obj.value.lastIndexOf('.');
        var file_name = obj.value.substring(file_kind+1,obj.length);
        var file_type = file_name.toLowerCase();



        var check_file_type=new Array();

        check_file_type=['mp4','mkv','x-m4v'];



        if(check_file_type.indexOf(file_type)==-1){
            alert('동영상 파일만 선택할 수 있습니다.');
            obj.value ='';
            return false;
        }
    }
</script>