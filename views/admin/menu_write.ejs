<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../adminFrame/head.ejs')%>
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <%-include('../adminFrame/nav.ejs')%>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">메뉴 등록하기</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            상세 등록 정보
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <form id="menuFileForm"  enctype="multipart/form-data"  method="post" >
                                <div class="row" style="margin-bottom:15px">
                                    <div class="col-lg-5">
                                        <div class="form-group">
                                            <label>메인 사진<span class='identify'> *</span></label>
                                            <input type="file" name="pic" accept="image/*" onchange='chk_file_type(this)' >
                                        </div>
                                        <div class="form-group">
                                            <label>메뉴명<span class='identify'> *</span></label>
                                            <input input type="varhcar" name="name" maxlength="100" required class="form-control" style="width:200px; height:30px;" >
                                        </div>
                                        <div class="form-group">
                                            <label>카테고리<span class='identify'> *</span></label>
                                            <label class="radio-inline">
                                                <input type="radio" name="category" value="Food" />Food
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="category" value="Cafe" />Cafe
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="category" value="Pub" />Pub
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            <label>가격<span class='identify'> *</span></label>
                                            <input input type="varchar" name="price" maxlength="100" required class="form-control" style="width:200px; height:30px;" >
                                        </div>
                                        <div class="form-group">
                                            <label>품절 여부<span class='identify'> *</span></label>
                                            <label class="radio-inline">
                                                <input type="radio" name="sell" value="0" />품절
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" name="sell" value="1" />판매
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <tr>
                                    <td colspan="2">
                                        <td><button type="button" class="btn btn-warning" style="padding:4px 12px;" onclick="fileUpload()">등록</a></button></td>
                                        <td><button type="button" class="btn btn-primary" style="padding:4px 12px;"  onclick="location.href='/admin/menu';">목록</button></td>                                                
                                    </td>
                                </tr>
                            </form>
                        </div>
                    </div>
                </div>    
            </div>
        </div>
    </div>
    <style>
        .identify{font-size: 14px; color:red;}
    </style>
</body>
</html>
<%-include('../adminFrame/footer.ejs')%>
<script>

    function fileUpload(){
        let form = $("#menuFileForm")[0]; 
        let data = new FormData(form);    
        console.log("data,",data) 
        $.ajax({
                type : 'post' , 
                url : '/admin/menuFileProcess' , 
                data : data , 
                dataType : 'json' ,   
                // processData / contentType 설명 https://repacat.tistory.com/38 참고               
                processData:false, 
                contentType:false,
        }).done(function(data){                
            alert(data.msg);
            if(data.result == 'success'){
                location.href = '/admin/menu'
            }            
        }).fail(function(e){
                console.log(JSON.stringify(e));
        })
    }
    function chk_file_type(obj) {
        var file_kind = obj.value.lastIndexOf('.');
        var file_name = obj.value.substring(file_kind+1,obj.length);
        var file_type = file_name.toLowerCase();
        var check_file_type=new Array();

        check_file_type=['jpg','gif','png','jpeg','bmp'];



        if(check_file_type.indexOf(file_type)==-1){
            alert('이미지 파일만 선택할 수 있습니다.');
            obj.value = '';
            return false;
        }
    }
</script>